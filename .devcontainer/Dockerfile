FROM ubuntu:24.04

# Information about the user
ARG USER_NAME=anqooqie
ARG USER_EMAIL=zzzfuku1991@gmail.com

# Avoid interactive prompts during package installation
ENV DEBIAN_FRONTEND=noninteractive

# Install dependencies and set up the environment
RUN apt-get update \
    \
    # Make the Japanese locale available
    && apt-get install -y --no-install-recommends \
    locales \
    && locale-gen ja_JP.UTF-8 \
    \
    # Make the Japanese time zone available
    && apt-get install -y --no-install-recommends \
    tzdata \
    \
    # Make GCC 14 the default compiler
    && apt-get install -y --no-install-recommends \
    build-essential \
    gcc-14 \
    g++-14 \
    && update-alternatives --install /usr/bin/gcc gcc /usr/bin/gcc-14 140 \
                           --slave   /usr/bin/g++ g++ /usr/bin/g++-14 \
    \
    # Make clang 20 the default compiler
    && apt-get install -y --no-install-recommends \
    clang-20 \
    clang++-20 \
    && update-alternatives --install /usr/bin/clang   clang   /usr/bin/clang-20   200 \
                           --slave   /usr/bin/clang++ clang++ /usr/bin/clang++-20 \
    \
    # Install utility commands
    && apt-get install -y --no-install-recommends \
    ca-certificates \
    cmake \
    curl \
    gdb \
    git \
    less \
    openssh-client \
    pipx \
    time \
    vim \
    \
    # Install atcoder-cli
    && apt-get install -y --no-install-recommends \
    nodejs \
    npm \
    && npm install -g \
    atcoder-cli \
    \
    # Install Ruby and Bundler to see the documents generated by competitive-verifier
    && apt-get install -y --no-install-recommends \
    libreadline-dev \
    libssl-dev \
    ruby-all-dev \
    ruby-bundler \
    zlib1g-dev \
    \
    # Clean up
    && apt-get clean \
    && rm -rf /var/lib/apt/lists/*

# Install Python 3.13, the version available on the AtCoder online judge.
RUN cd /tmp \
    && apt-get update \
    && apt-get install -y --no-install-recommends \
    build-essential \
    gdb \
    lcov \
    pkg-config \
    libbz2-dev \
    libffi-dev \
    libgdbm-dev \
    libgdbm-compat-dev \
    liblzma-dev \
    libncurses5-dev \
    libreadline6-dev \
    libsqlite3-dev \
    libssl-dev \
    lzma \
    lzma-dev \
    tk-dev \
    uuid-dev \
    zlib1g-dev \
    git \
    llvm-bolt \
    && curl -o Python-3.13.7.tar.xz https://www.python.org/ftp/python/3.13.7/Python-3.13.7.tar.xz \
    && tar xf Python-3.13.7.tar.xz \
    && cd Python-3.13.7 \
    && ln -s /usr/lib/llvm-18/lib/libbolt_rt_instr.a /usr/lib/libbolt_rt_instr.a \
    && ./configure --enable-optimizations --with-lto=full --with-strict-overflow --enable-bolt \
    && make -j$(nproc) \
    && make altinstall \
    && cd .. \
    && rm -rf Python-3.13.7.tar.xz Python-3.13.7 \
    && python3.13 -m pip install setuptools pip -U \
    && python3.13 -m pip install --no-warn-script-location \
    absl-py==2.3.1 \
    git+https://github.com/not522/ac-library-python@27fdbb71cd0d566bdeb12746db59c9d908c6b5d5 \
    acl-cpp-python==0.6.2 \
    bitarray==3.6.1 \
    cppyy==3.5.0 \
    cppyy-backend==1.15.3 \
    cppyy-cling==6.32.8 \
    CPyCppyy==1.13.0 \
    Cython==3.1.3 \
    filelock==3.19.1 \
    fsspec==2025.7.0 \
    gmpy2==2.2.1 \
    immutabledict==4.2.1 \
    Jinja2==3.1.6 \
    joblib==1.5.1 \
    lightgbm==4.6.0 \
    llvmlite==0.44.0 \
    MarkupSafe==3.0.2 \
    more-itertools==10.7.0 \
    mpmath==1.3.0 \
    networkx==3.5 \
    numpy==2.2.6 \
    ortools==9.14.6206 \
    pandas==2.3.2 \
    polars==1.31.0 \
    protobuf==6.31.1 \
    PuLP==3.2.2 \
    pyrsistent==0.20.0 \
    python-dateutil==2.9.0.post0 \
    pytz==2025.2 \
    rustworkx==0.16.0 \
    scikit-learn==1.7.1 \
    scipy==1.16.1 \
    shapely==2.1.1 \
    six==1.17.0 \
    sortedcontainers==2.4.0 \
    sympy==1.14.0 \
    threadpoolctl==3.6.0 \
    typing_extensions==4.14.1 \
    tzdata==2025.2 \
    z3-solver==4.15.3.0 \
    && python3.13 -m pip cache purge \
    && apt-get clean \
    && rm -rf /var/lib/apt/lists/*

# Switch to non-root user
USER ubuntu
WORKDIR /home/ubuntu

# Install dependencies and set up the environment for the non-root user
RUN \
    # Install online-judge-tools and other relevant tools using pipx
    pipx install \
    aclogin \
    competitive-verifier \
    online-judge-tools \
    online-judge-verify-helper \
    \
    # Configure atcoder-cli
    && acc config oj-path "$(realpath "$(which oj)")" \
    && acc config default-test-dirname-format test \
    && acc config default-template cpp \
    \
    # Configure git
    && git config --global core.editor vim \
    && git config --global init.defaultBranch main \
    && git config --global user.name $USER_NAME \
    && git config --global user.email $USER_EMAIL
